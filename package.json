{
  "name": "sc-bonds",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "postinstall": "npm run test-original:install && npm run initial-impl:install",
    "test-original:install": "cd tests/original-unit-testing && npm install",
    "initial-impl:install": "cd initial-eib-impl && npm install",
    "initial-impl:build": "cd initial-eib-impl && npm run build",
    "build": "npm run initial-impl:build"
  },
  "keywords": [],
  "author": "Guénolé de Cadoudal",
  "license": "Apache 2.0",
  "scripts": {
    "clean": "pnpm exec hardhat clean",
    "compile": "pnpm exec hardhat compile",
    "test": "hardhat test",
    "size": "hardhat size-contracts",
    "docgen": "pnpm exec hardhat docgen",
    "size:no-compile": "pnpm exec hardhat size-contracts --no-compile",
    "solc-combined-json": "solc -o contracts-artifacts/solc --optimize --combined-json abi,bin,bin-runtime --metadata-hash none --overwrite --base-path . --include-path ./node_modules  src/*.sol",
    "hardhat-combined-json": "pnpm clean && pnpm compile && pnpm exec hardhat combined-json --output contracts-artifacts/hardhat/combined.json",
    "prettier": "prettier --write --plugin=prettier-plugin-solidity 'src/**/*.sol'",
    "prettier-ts": "prettier --config .prettierrc 'test/**/*.ts' --write"
  },
  "prettier": {
    "bracketSpacing": true
  },
  "devDependencies": {
    "@saturn-chain/smart-contract": "^1.0.19"
  },
  "packageManager": "pnpm@8.5.1",
  "dependencies": {
    "@so-bond/interfaces": "github:so-bond/interfaces"
  }
}
